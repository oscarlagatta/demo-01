{
  "patterns": {
    "basic": {
      "description": "Basic Nx integration with affected command",
      "config": {
        "*.{js,jsx,ts,tsx}": ["nx affected:lint --files", "nx format:write --uncommitted"]
      }
    },
    "advanced": {
      "description": "Advanced with custom script and better error handling",
      "config": {
        "*.{js,jsx,ts,tsx}": ["node scripts/nx-lint-staged.js", "nx format:write --uncommitted"]
      }
    },
    "project-specific": {
      "description": "Project-specific linting with file filtering",
      "config": {
        "apps/**/*.{js,jsx,ts,tsx}": ["nx affected:lint --files", "nx format:write --uncommitted"],
        "libs/**/*.{js,jsx,ts,tsx}": ["nx affected:lint --files", "nx format:write --uncommitted"]
      }
    },
    "performance-optimized": {
      "description": "Performance optimized with parallel execution",
      "config": {
        "*.{js,jsx,ts,tsx}": [
          "nx affected:lint --files --parallel=3 --skip-nx-cache=false",
          "nx format:write --uncommitted"
        ]
      }
    }
  },
  "recommended": "advanced",
  "fallbacks": ["nx lint --files", "npx eslint --fix"]
}
